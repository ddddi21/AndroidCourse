<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/firstNumberEditText"
        android:layout_width="@dimen/default_folder_width"
        android:layout_height="@dimen/default_folder_height"
        android:layout_marginStart="@dimen/folder_1_margin_start"
        android:layout_marginTop="@dimen/default_folder_margin_top"
        android:hint="@string/field_1"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/secondNumberEditText"
        android:layout_width="@dimen/default_folder_width"
        android:layout_height="@dimen/default_folder_height"
        android:layout_marginTop="@dimen/default_folder_margin_top"
        android:layout_marginEnd="@dimen/folder_2_margin_end"
        android:hint="@string/field_2"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/resultEditText"
        android:layout_width="@dimen/default_folder_width"
        android:layout_height="@dimen/default_folder_height"
        android:hint="@string/field_result"
        android:inputType="numberDecimal"
        android:layout_marginTop="@dimen/default_margin_top"
        app:layout_constraintEnd_toEndOf="@+id/EqualsImageView"
        app:layout_constraintStart_toStartOf="@+id/EqualsImageView"
        app:layout_constraintTop_toBottomOf="@+id/EqualsImageView" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="@dimen/default_margin_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultEditText" />

    <ImageView
        android:id="@+id/plusImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/firstNumberEditText"
        app:layout_constraintEnd_toStartOf="@+id/secondNumberEditText"
        app:layout_constraintStart_toEndOf="@+id/firstNumberEditText"
        app:layout_constraintTop_toTopOf="@+id/firstNumberEditText"
        app:srcCompat="@drawable/ic_baseline_add_24" />

    <ImageView
        android:id="@+id/EqualsImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_top"
        app:layout_constraintEnd_toEndOf="@+id/plusImageView"
        app:layout_constraintStart_toStartOf="@+id/plusImageView"
        app:layout_constraintTop_toBottomOf="@+id/plusImageView"
        app:srcCompat="@drawable/ic_baseline_drag_handle_24" />

</androidx.constraintlayout.widget.ConstraintLayout>